    <link href="https://fonts.googleapis.com/css2?family=Anton&amp;family=Space+Mono:ital,wght@0,400;0,700;1,400&amp;display=swap" rel="stylesheet" vid="7">
    <style vid="8">
        :root {
            --void: #1a0f0a; 
            --charcoal: #121212; 
            --rust: #d35400; 
            --rust-glow: #e67e22; 
            --oxide-gold: #ff6b35; 
            --steel: #2c1e18; 
            --font-display: 'Anton', sans-serif;
            --font-mono: 'Space Mono', monospace;
            --border: 1px solid rgba(255, 107, 53, 0.2);
        }

        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            background-color: var(--charcoal);
            color: #e8e0dc;
            font-family: var(--font-mono);
            overflow: hidden;
            height: 100vh;
        }

        .layout {
            display: grid;
            grid-template-columns: 80px 1fr;
            height: 100vh;
            width: 100vw;
        }

        
        .sidebar {
            background: var(--void);
            border-right: 1px solid #3d2218;
            padding: 2rem 0;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            align-items: center;
            z-index: 100;
        }

        .brand {
            font-family: var(--font-display);
            font-size: 1.5rem;
            color: #fff;
            writing-mode: vertical-rl;
            transform: rotate(180deg);
            letter-spacing: 0.1em;
        }

        .nav-vertical {
            display: flex;
            flex-direction: column;
            gap: 4rem;
            margin-top: 2rem;
        }

        .nav-link {
            font-size: 0.75rem;
            text-transform: uppercase;
            letter-spacing: 0.4em;
            color: #8a665c;
            text-decoration: none;
            writing-mode: vertical-rl;
            transform: rotate(180deg);
            transition: all 0.3s ease;
            white-space: nowrap;
        }

        .nav-link:hover, .nav-link.active {
            color: var(--oxide-gold);
        }

        .location-tags {
            font-size: 0.6rem;
            color: var(--rust);
            letter-spacing: 0.4em;
            writing-mode: vertical-rl;
            transform: rotate(180deg);
            display: flex;
            gap: 2rem;
            align-items: center;
            opacity: 0.5;
            padding-bottom: 2rem;
        }

        
        .scrolling-content {
            height: 100vh;
            overflow-y: auto;
            scroll-behavior: smooth;
            background-color: var(--charcoal);
            background-image: 
                radial-gradient(circle at 50% 50%, rgba(211, 84, 0, 0.08) 0%, transparent 70%),
                url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='n'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.65' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23n)' opacity='0.08'/%3E%3C/svg%3E");
        }

        section {
            padding: 6rem 5vw;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .hero-title {
            font-family: var(--font-display);
            font-size: 10vw;
            line-height: 0.85;
            text-transform: uppercase;
            color: var(--oxide-gold);
            margin-bottom: 2rem;
        }

        .hero-sub {
            border-left: 4px solid var(--rust);
            padding-left: 2rem;
        }

        .hero-sub p:first-child {
            text-transform: uppercase;
            letter-spacing: 0.2em;
            font-weight: bold;
            color: #fff;
        }

        .hero-sub p:last-child {
            color: var(--rust);
            text-transform: uppercase;
            font-size: 0.8rem;
            margin-top: 0.5rem;
        }

        
        .gallery-section {
            padding: 6rem 0 6rem 5vw;
            display: flex;
            flex-direction: column;
            justify-content: center;
            overflow: hidden;
        }

        .section-header {
            padding-right: 5vw;
            margin-bottom: 3rem;
        }

        .section-label {
            font-size: 0.7rem;
            text-transform: uppercase;
            letter-spacing: 0.4em;
            color: var(--rust);
            margin-bottom: 1rem;
            opacity: 0.8;
        }

        .section-title {
            font-family: var(--font-display);
            font-size: 3rem;
            color: var(--oxide-gold);
            line-height: 1;
        }

        .gallery-filmstrip-container {
            width: 100%;
            overflow-x: auto;
            padding-bottom: 2rem;
            -ms-overflow-style: none;
            scrollbar-width: none;
        }

        .gallery-filmstrip-container::-webkit-scrollbar {
            display: none;
        }

        .gallery-filmstrip {
            display: flex;
            gap: 2rem;
            padding-right: 5vw;
        }

        .artwork-card {
            flex: 0 0 600px;
            cursor: pointer;
        }

        .artwork-image {
            width: 100%;
            aspect-ratio: 16/9;
            background-color: var(--charcoal);
            border: 1px solid rgba(255, 107, 53, 0.15);
            overflow: hidden;
            margin-bottom: 1.5rem;
            position: relative;
        }

        .artwork-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            filter: grayscale(60%) contrast(120%) brightness(0.7);
            transition: transform 0.5s ease, filter 0.5s ease;
        }

        .artwork-card:hover .artwork-image img {
            transform: scale(1.03);
            filter: grayscale(0%) contrast(110%) brightness(0.9);
        }

        .artwork-info {
            display: flex;
            justify-content: space-between;
            align-items: baseline;
            padding: 0 0.5rem;
        }

        .artwork-title {
            font-family: var(--font-display);
            font-size: 1.5rem;
            color: #f5f0ee;
            letter-spacing: 0.05em;
        }

        .artwork-meta {
            font-size: 0.7rem;
            color: var(--rust);
            text-transform: uppercase;
            letter-spacing: 0.1em;
        }

        
        .form-container {
            border: 1px solid rgba(255, 107, 53, 0.2);
            padding: 4rem;
            background: rgba(26, 15, 10, 0.95);
            box-shadow: 0 40px 100px rgba(0,0,0,0.9);
            position: relative;
            max-width: 900px;
        }

        .form-container::before {
            content: '';
            position: absolute;
            top: 0; left: 0; width: 100%; height: 4px;
            background: linear-gradient(90deg, var(--rust), var(--oxide-gold), var(--rust));
        }

        .form-header {
            margin-bottom: 4rem;
        }

        .form-header h2 {
            font-family: var(--font-display);
            font-size: 3rem;
            letter-spacing: 0.05em;
            color: var(--oxide-gold);
        }

        .form-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 2.5rem;
        }

        .form-group {
            margin-bottom: 2.5rem;
            display: flex;
            flex-direction: column;
        }

        .full-width {
            grid-column: span 2;
        }

        label {
            font-size: 0.75rem;
            text-transform: uppercase;
            color: var(--rust);
            margin-bottom: 0.75rem;
            letter-spacing: 0.1em;
        }

        input, select, textarea {
            background: transparent;
            border: none;
            border-bottom: 1px solid #4d2d1d;
            color: #fff;
            padding: 1rem 0;
            font-family: var(--font-mono);
            font-size: 1rem;
            transition: border-color 0.3s;
        }

        input:focus, select:focus, textarea:focus {
            outline: none;
            border-bottom-color: var(--oxide-gold);
        }

        .materials-grid {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 1rem;
            margin-top: 0.5rem;
        }

        .material-option {
            border: 1px solid #4d2d1d;
            padding: 0.8rem;
            text-align: center;
            font-size: 0.7rem;
            text-transform: uppercase;
            cursor: pointer;
            transition: all 0.2s;
            color: #997a6e;
        }

        .material-option:hover {
            border-color: var(--rust);
            color: var(--oxide-gold);
        }

        .material-option.selected {
            background: var(--rust);
            color: #fff;
            border-color: var(--rust);
        }

        .submit-btn {
            width: 100%;
            background: transparent;
            border: 1px solid var(--oxide-gold);
            color: var(--oxide-gold);
            padding: 1.5rem;
            font-family: var(--font-display);
            font-size: 1.5rem;
            text-transform: uppercase;
            cursor: pointer;
            margin-top: 1rem;
            transition: all 0.3s;
        }

        .submit-btn:hover {
            background: var(--oxide-gold);
            color: var(--void);
        }

        footer {
            margin-top: 4rem;
            padding-top: 2rem;
            border-top: 1px solid #3d2218;
            display: flex;
            justify-content: space-between;
            font-size: 0.6rem;
            color: #8a665c;
            text-transform: uppercase;
            letter-spacing: 0.2em;
        }

        ::-webkit-scrollbar { width: 5px; }
        ::-webkit-scrollbar-track { background: var(--charcoal); }
        ::-webkit-scrollbar-thumb { background: #4d2d1d; }
    </style>
</head>
