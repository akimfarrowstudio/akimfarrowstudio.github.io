    <script vid="82">
        const scrollContainer = document.querySelector('.scrolling-content');
        const heroBg = document.querySelector('.hero-bg');
        
        scrollContainer.addEventListener('scroll', () => {
            const scroll = scrollContainer.scrollTop;
            const height = window.innerHeight;
            const opacity = 1 - (scroll / height);
            
            if (scroll < height) {
                heroBg.style.opacity = Math.max(0, opacity);
                heroBg.style.transform = `translateY(${scroll * 0.3}px)`;
            }
        });

        
        const bars = document.querySelectorAll('.wave-bar');
        setInterval(() => {
            bars.forEach(bar => {
                if (Math.random() > 0.5) {
                    bar.style.height = `${Math.random() * 100}%`;
                }
            });
        }, 150);
    </script>
